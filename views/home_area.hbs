<main>
    <div class="container">
        <div class="jumbotron text-center mt-5">
            <h2 class="lead display-6" style="font-weight: bold;">Area {{area}}</h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <p>Select a parking spot:</p>
                <img src="files\area1.png" id="Area1" alt="Area 1" class="img-fluid">
            </div>
            <div class="col-md-6">
                <form>
                    <div class="form-group">
                        <select id="parkingSpot" name="parkingSpot" class="form-control" required>
                            <option value="" disabled selected>Select a spot</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success mt-3">Book the spot!</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    
</main>   