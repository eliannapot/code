<main>
    <div class="container">
        <!-- Welcome Section -->
        <div class="jumbotron text-center">
            <h1 class="display-4">Welcome to Smart Parking!</h1>
            <p class="lead">Book your parking spot hassle-free.</p>
        </div>

        <!-- Date, Faculty, Time Selection Form -->
        <form>
            <div class="form-group">
                <label for="datePicker">Select Date:</label>
                <input type="date" class="form-control" id="datePicker" required>
            </div>

            <div class="form-group">
                <label for="facultySelect">Select Faculty:</label>
                <select class="form-control" id="facultySelect" required>
                    <option value="faculty1">Faculty 1</option>
                    <option value="faculty2">Faculty 2</option>
                    <!-- Add more options as needed -->
                </select>
            </div>

            <div class="form-group">
                <label for="timePicker">Select Time:</label>
                <input type="time" class="form-control" id="timePicker" required>
            </div>

            <button type="submit" class="btn btn-primary">Search Parking</button>
        </form>
    </div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
 
</main>      
