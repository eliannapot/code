<main>
    <div class="container">
        <!-- Welcome Section -->
        <div class="jumbotron text-center mt-5">
            <h2 class="lead display-6" style="font-weight: bold;">Book Now!</h2>
        </div>

        <!-- Date, Faculty, Time Selection Form -->
        <form>
            <div class="form-group mb-3">
                <label for="datePicker">Select Date:</label>
                <input type="date" class="form-control" id="datePicker" required>
            </div>

            <div class="form-group mb-3">
                <label for="facultySelect">Select Faculty:</label>
                <select class="form-control" id="facultySelect" required>
                    <option value="" selected disabled hidden></option>
                    <option value="faculty1">Ηλεκτρολόγων Μηχανικών και Τεχνολογίας Υπολογιστών</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="timePicker">Select Time:</label>
                <input type="time" class="form-control" id="timePicker" required>
            </div>
            <div class="text-center">
                <a href="/home_faculty" class="btn btn-success">Search Parking</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    
