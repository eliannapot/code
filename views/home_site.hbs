<main>
    <div class="container">
        <div class="jumbotron text-center my-4">
            <h2 class="lead display-6" style="font-weight: bold;">Parking Site: {{site}}</h2>
        </div>
        <div class="row">
            <div class="col-md-6 mx-auto"> 
                <p class="mt-0">Select a parking spot:</p> <!-- Adjusted margin-top to 0 -->
                <img src="files\ECE_1.png" id="ECE1" alt="ECE_1" class="img-fluid" style="width: 80%; display: block; margin: 0 auto;"> <!-- Adjusted image centering -->
                <form class="text-center mt-3"> <!-- Adjusted margin-top -->
                    <div class="form-group my-4">
                        <select id="parkingSpot" name="parkingSpot" class="form-control" required>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success mt-3">Book the spot!</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
</main>
